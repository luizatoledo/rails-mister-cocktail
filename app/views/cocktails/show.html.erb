<div class="container">
  <h1 class="title text-center"><%= @cocktail.name %></h1>
  <p><strong>Recipe:</strong></p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> |
        <%= dose.ingredient.name %> |
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div class="new-dose-form">
    <h2>Add new dose </h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit %>
    <% end %>
  </div>
  <p><%= link_to "Back to cocktail list", cocktails_path %></p>
</div>