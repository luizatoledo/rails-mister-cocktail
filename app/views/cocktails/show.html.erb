<div class="container">
  <h1 class="title text-center"><%= @cocktail.name %></h1>
  <p><strong>Recipe:</strong></p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> |
        <%= dose.ingredient.name %> |
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to "Add new dose to this cocktail", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Back to cocktail list", cocktails_path %></p>
</div>