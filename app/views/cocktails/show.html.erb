<div class="container">
  <h1 class="title text-center"><%= @cocktail.name %></h1>
  <p><strong>Recipe:</strong></p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> | <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
  <%= link_to "Back to cocktail list", cocktails_path %>
</div>